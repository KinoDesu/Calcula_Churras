<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".CadastroDePessoas">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Cadastro de integrante"
        android:textAlignment="center"
        android:textColor="?android:attr/textColor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtQuantidadePessoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Integrantes: "
        android:textColor="?android:attr/textColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/txtTotalChurras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total do churras: R$ "
        android:textColor="?android:attr/textColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/txtValorCada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor para cada: R$ "
        android:textColor="?android:attr/textColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do integrante:"
        android:textColor="?android:attr/textColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editNomePessoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#959595"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textShortMessage|textPersonName|textCapSentences"
        android:minHeight="48dp"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textColor="?android:attr/textColor"
        android:textColorHint="?android:attr/textColor" />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor gasto:"
        android:textColor="?android:attr/textColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editValorGasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#959595"
        android:ems="10"
        android:hint="Valor gasto"
        android:text="R$ 0,00"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textAllCaps="true"
        android:textColor="?android:attr/textColor"
        android:textColorHint="?android:attr/textColor" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="22dp" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buttonColor"
        android:onClick="salvarPessoa"
        android:text="Adicionar Integrante"
        android:textColor="?android:attr/textColor" />

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="47dp" />

    <Button
        android:id="@+id/btnFinalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buttonColor"
        android:onClick="finalizarCadastros"
        android:text="Adicionar e AvanÃ§ar"
        android:textColor="?android:attr/textColor" />

    <View
        android:id="@+id/divider10"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

</LinearLayout>